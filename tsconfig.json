{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src"
  },
  "include": ["src"],
  "paths": {
    "apis/*": ["appis/*"],
    "assets/*": ["assets/*"],
    "components/*": ["components/*"],
    "constants/*": ["constants/*"],
    "dummy/*": ["dummy/*"],
    "fonts/*": ["fonts/*"],
    "hooks/*": ["hooks/*"],
    "pages/*": ["pages/*"],
    "styles/*": ["styles/*"],
    "types/*": ["types/*"]
  }
}
